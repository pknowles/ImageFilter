{
	"manifest_version": 3,
	"name": "Image Filter",
	"description": "Applies filters to images on web-pages to improve contrast.",
	"version": "1.1",
	"action": {
		"default_title": "Image Filter",
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon.png"
	},
	"options_page": "options.html",
	"options_ui": {
		"page": "options.html"
	},
	"permissions": ["tabs", "storage", "contextMenus"],
	"host_permissions": ["<all_urls>"],
	"content_scripts": [
		{
			"matches": [
				"*://*/*"
			],
			"js": [
				"jquery-2.2.0.min.js",
				"mousetrap.min.js",
				"defaults.js",
				"storage.js",
				"messaging.js",
				"imagefinder.js",
				"histogram.js",
				"filter.js",
				"filtermanager.js",
				"content.js"
			],
			"run_at": "document_idle"
		}
	],
	"background": {
		"service_worker": "service-worker.js"
	}
}
